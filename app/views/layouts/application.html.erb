<!DOCTYPE html>
<html>
<head>
  <title>Rails-Sample</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
  <h3>Hello <%= current_user.email %></h3>
  <button><%= link_to "Log out", destroy_user_session_path, method: :delete %></button>
<% else %>
   <button><%= link_to "Log in", new_user_session_path %></button>
    <button><%= link_to "Sign up", new_user_registration_path %></button>
<% end %>
<hr>

<%= yield %>

</body>
</html>
